<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="frag_info"
    android:id="@+id/frag_info"
    tools:context="com.senamoviles.alcayata.alcayata.MainFragments.InfoFragment">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="4dp">

        </android.support.v7.widget.CardView>-->

        <ImageView
            android:id="@+id/img_paso"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="4dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorGris">

            <TextView
                android:id="@+id/nombre_paso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/txt_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="una descripcion bien rara del paso"
                    android:textSize="15sp"
                    android:layout_margin="10dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/card_sabias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Sabias Que..?"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnLeer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leer"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        style="?android:attr/borderlessButtonStyle"/>

                    <Button
                        android:id="@+id/btnEscuchar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Escuchar"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        style="?android:attr/borderlessButtonStyle"/>


                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
    


</FrameLayout>
