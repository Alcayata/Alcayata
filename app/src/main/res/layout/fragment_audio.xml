<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="frag_audio"
    android:id="@+id/frag_audio"
    tools:context="com.senamoviles.alcayata.alcayata.MainFragments.AudioFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#d8afabab"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/img_btn_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/playblanco"


            />

        <SeekBar
            android:id="@+id/soundSeekBar"
            style="@style/Widget.AppCompat.SeekBar"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxHeight="7dp"
            android:maxWidth="15dp"
            android:minHeight="15dp"
            android:minWidth="15dp"
            android:progress="50"
            android:progressDrawable="@drawable/custom_seekbar"
            android:thumb="@drawable/custom_thumb"

            />
    </LinearLayout>

</FrameLayout>
