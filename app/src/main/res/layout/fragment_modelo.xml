<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="frag_modelo"
    android:id="@+id/frag_modelo"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.senamoviles.alcayata.alcayata.MainFragments.ModeloFragment">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/imgModelo"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modelo 3D"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/info_modelo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mira el paso en 3D"
                    android:textSize="15sp"
                    android:layout_margin="10dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_modelo"
            android:layout_gravity="center_horizontal|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modelo 3D"/>

    </LinearLayout>








</FrameLayout>
